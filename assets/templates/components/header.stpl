<!DOCTYPE html>
<html lang="<%= page_lang %>" translate="no">
<head>
    <title><%- format!("{} - Jheyson Saavedra", page_meta.title) %></title>
    <link rel="icon" href="<%= page_url %>/static/favicon.ico" />

    <meta charset="UTF-8" />

    <!-- Theme Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark light" />
    <meta name="theme-color" content="#3B82F6" />

    <!-- General Tags -->
    <meta name="title" content="<%- format!("{} - Jheyson Saavedra", page_meta.title) %>" />
    <meta name="description" content="<%= page_meta.description %>" />
    <meta name="robots" content="index, follow" />
    <meta name="keywords" content="<%= page_meta.keywords %>" />
    <meta name="author" content="Jheyson Saavedra" />

    <!-- Open Graph Tags -->
    <meta property="og:type" content="website" />
		<meta property="og:site_name" content="Jheyson Saavedra" />
    <meta property="og:title" content="<%- format!("{} - Jheyson Saavedra", page_meta.title) %>" />
    <meta property="og:description" content="<%= page_meta.description %>" />

    <!-- Twitter Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@JheysonDev" />
    <meta name="twitter:creator" content="@JheysonDev" />

    <!-- Preload fonts -->
    <link rel="preload" href="/static/fonts/Inter/Inter-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" /> 
    <link rel="preload" href="/static/fonts/Inter/Inter-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-Light.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-SemiBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-ExtraBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-Black.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-BoldItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-LightItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-MediumItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-SemiBoldItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-ExtraBoldItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/Inter/Inter-BlackItalic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />

    <link rel="preload" href="/static/fonts/JetBrainsMono/JetBrainsMono-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/JetBrainsMono/JetBrainsMono-Italic.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/static/fonts/JetBrainsMono/JetBrainsMono-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
