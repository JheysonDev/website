    <!-- Styles -->
    <style><%- page_styles.trim().split('\n').map(|line| line.trim()).collect::<Vec<&str>>().join("") %></style>
</head>
<header class="header">
    <nav class="header-navigation">
        <ul class="nav-items">
            <% for item in nav_items {%>
            <% let item_split: Vec<&str> = item.split(":").collect(); %>
            <% let item_name = item_split[0]; %>
            <% let item_link = item_split[1]; %>
            <li class="nav-item">
                <a href="<%= item_link %>"><%= item_name %></a>
            </li>
            <% } %>
        </ul>
    </nav>
</header>
